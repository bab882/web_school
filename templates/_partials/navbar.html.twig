                      <a href="/{{ item.Slug }}" class="dropdown-item" {% if drop != '0' %} data-bs-toggle="dropdown" data-bs-auto-close="outside"  {% endif %}>{{ item.name }} </a>
                      
                     {% if drop != '0' %}
                      <ul class="dropdown-menu shadow">   
