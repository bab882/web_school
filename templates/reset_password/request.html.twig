{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}


    

{% block body %}
<section class="container-fluid auth">
                 {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

               
            <form method="post" class="input col-md-3 right">
               {{ form_start(requestForm) }}  
        
                <h3 class="mb-3 font-weight-normal title">Réinitialisez<br> 
                    <span class="sous-title">Votre mot de passe</span>
                </h3>
                

                <div class="col-md-12 mb-3">
                    {{ form_row(requestForm.email) }}
                    
                </div>
              
                <div class="d-flex justify-content-center g-2 p-3">
                    <button type="submit" class="btn col-md-5 m-2">Envoyer</button>               
                </div>
             {{ form_end(requestForm) }}   
            </form>
            
</section>
    

{% endblock %}